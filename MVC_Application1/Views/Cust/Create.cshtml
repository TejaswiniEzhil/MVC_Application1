@model MVC_Application1.Models.CustomerDetails
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> New Customer</h2>

<div class="container">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(c => c.Name)
            @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(c=>c.Name)

        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Birthdate)
            @Html.TextBoxFor(c => c.Birthdate, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.Birthdate)

        </div>
        @*<div class="form-group">
            @Html.LabelFor(c => c.Gender)
            @Html.TextBoxFor(c => c.Gender, new { @class = "form-control" })

        </div>*@
        <div>
            <div class="form-group">
                @Html.LabelFor(c => c.Gender)
                @Html.DropDownListFor(c => c.Gender,ViewBag.Gender as SelectList,new { @class = "form-control" })
                @Html.ValidationMessageFor(c=>c.Gender)
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(c=> c.MembershipType1Id)
            @Html.DropDownList("MembershipType1Id",ViewBag.MembershipType1Id as SelectList,new {  @class="form-control"})
       
            @Html.ValidationMessageFor(c=>c.MembershipType1Id)
        </div>

       <div class="form-group">
           <input type="submit"name="cmdsubmit" value="submit"class=" btn-primary" />
       </div>
    }
</div>
@section Scripts{
    @Scripts.Render("~/ bundles / jqueryval")}

